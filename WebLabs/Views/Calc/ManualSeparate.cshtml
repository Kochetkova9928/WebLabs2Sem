@{
    ViewData["Title"] = "Manual Separate";
}


<form asp-controller="Calc" asp-action="ManualSeparate" method="post" asp-route-token="55">
    <label><h1>ManualWithSeparateHandlers</h1></label>
    <div class="form-row">
        <div class="form-group col-md-5">
            <input type="number" class="form-control" name="num1">
        </div>
        <div class="form-group col-md-2">
            <select name="operation" class="form-control">
                <option selected value="0">+</option>
                <option value="1">-</option>
                <option value="2">*</option>
                <option value="3">/</option>
            </select>
        </div>
        <div class="form-group col-md-5">
            <input type="number" class="form-control" name="num2">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Посчитать</button>
</form>
