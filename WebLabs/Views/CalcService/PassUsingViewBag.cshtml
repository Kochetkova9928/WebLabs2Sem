@model WebLabs.Models.PassUsingModel

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-3">
        Первое число
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@ViewBag.Num1</span>
    </dd>

    <dt class="col-3">
        Второе число
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@ViewBag.Num2</span>
    </dd>

    <dt class="col-3">
        Сумма чисел
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@ViewBag.Num1 + @ViewBag.Num2 = @ViewBag.Sum</span>
    </dd>

    <dt class="col-3">
        Разность чисел
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@ViewBag.Num1 - @ViewBag.Num2 = @ViewBag.Sub</span>
    </dd>

    <dt class="col-3">
        Произведение чисел
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@ViewBag.Num1 * @ViewBag.Num2 = @ViewBag.Mul</span>
    </dd>

    <dt class="col-3">
        Частное чисел
    </dt>
    <dd class="col-9">
        @if (ViewBag.Div == -1)
        {
            <span class="badge badge-light">знаменатель равен нулю</span>
        }
        else
        {
            <span class="badge badge-light">@ViewBag.Num1 / @ViewBag.Num2 = @ViewBag.Div</span>
        }
    </dd>

</dl>
